---
// data imports
import workExperience from "@/data/Jobs.ts";

// component imports
import JobDetails from "./JobDetails.astro";

// config import
import { ME } from "@/config";
---

<div class="relative flex flex-col gap-8 text-n700 dark:text-n200 w-full mt-10">
  {/*Description or About me -- Section*/}
  <div class="mb-4">
    <p>
      {ME.aboutMe}
    </p>
  </div>
  {/*Work experience section*/}
  <div class="mb-4">
    <h2 class="text-3xl font-bold mb-4">Work Experience</h2>
    <div class="flex flex-col gap-6">
      {workExperience.map((job) => <JobDetails jobData={job} />)}
    </div>
  </div>
</div>
