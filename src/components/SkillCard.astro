---
// component imports
import { Icon } from "astro-icon/components";
import { Badge } from "./ui/badge";

interface SkillCardProps {
  icon?: string;
  name: string;
  skills?: string[];
}

const { icon, name, skills } = Astro.props as SkillCardProps;
---

<div
  class="flex flex-col gap-2 h-skill-icon bg-white dark:bg-n700 p-4 rounded-md"
>
  {
    icon && (
      <div class="w-10 h-10">
        <Icon
          width={40}
          height={40}
          name={icon}
          class="text-primary-light dark:text-primary-dark"
        />
      </div>
    )
  }
  <h3 class="text-xl font-bold">{name}</h3>
  {
    skills && (
      <div class="flex flex-wrap gap-2 py-2">
        {skills.map((skill) => (
          <div class="bg-black/10 dark:bg-white/10 rounded-md px-2 py-1">
            {skill}
          </div>
        ))}
      </div>
    )
  }
</div>
